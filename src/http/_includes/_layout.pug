block variables
doctype html
html(lang=ja)
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="format-detection" content="telephone=no")
    title #{site[pageId].title}
    meta(name="description" content=site[pageId].description)
    meta(name="keywords" content=site[pageId].keywords)
    //- OGP
    meta(property="og:title" content=site[pageId].title)
    meta(property="og:type" content=site[pageId].ogpType)
    meta(property="og:image" content=site.ogpImage)
    meta(property="og:url" content=site.rootUrl + pageUrl)
    meta(property="og:description" content=site[pageId].description)
    meta(property="og:site_name" content=site.name)
    //- /OGP

    block css
      link(rel="stylesheet" href="/common/css/common.css")

  body
    include /_includes/_header

    block content

    include /_includes/_footer
    include /_includes/_script
